server {
	listen 80;
	server_name default.ssc;

	root /var/www;
	access_log /var/www/log/$host.nginx.access.log;
	error_log /var/www/log/$host.nginx.error.log;

	location / {
		try_files $uri $uri/ /index.html /index.php;
	}

	location ~ \.php$ {
		include fastcgi_params;
		fastcgi_pass 127.0.0.1:9000;
	}
}
